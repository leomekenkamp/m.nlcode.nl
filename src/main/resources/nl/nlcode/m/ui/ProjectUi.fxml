<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import nl.nlcode.m.ui.ProjectUi?>

<fx:root xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
         type="ProjectUi">
    <top>
        <MenuBar>
            <menus>
                <Menu text="%_project" mnemonicParsing="true">
                    <items>
                        <MenuItem mnemonicParsing="true" text="%_save" onAction="#save"/>
                        <MenuItem mnemonicParsing="true" text="%save_as" onAction="#saveAs"/>
                        <MenuItem mnemonicParsing="true" text="%_close" onAction="#closeWindow"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%_create">
                    <items>
                        <MenuItem onAction="#createMidiDeviceLink" mnemonicParsing="true" text="%nl.nlcode.m.engine.MidiDeviceLink" />
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="arpeggiator" mnemonicParsing="true" text="%nl.nlcode.m.engine.Arpeggiator" />
                        <MenuItem fx:id="midiSequencer" mnemonicParsing="true" text="%nl.nlcode.m.engine.MidiSequencer" />
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="channelMatrix" mnemonicParsing="true" text="%nl.nlcode.m.engine.ChannelMatrix" />
                        <MenuItem fx:id="echo" mnemonicParsing="true" text="%nl.nlcode.m.engine.Echo" />
                        <MenuItem fx:id="layerAndSplit" mnemonicParsing="true" text="%nl.nlcode.m.engine.LayerAndSplit" />
                        <MenuItem onAction="#createMessageTypeFilter" mnemonicParsing="true" text="%nl.nlcode.m.engine.MessageTypeFilter" />
                        <MenuItem fx:id="midiClock" mnemonicParsing="true" text="%nl.nlcode.m.engine.MidiClock" />
                        <MenuItem fx:id="noteGate" mnemonicParsing="true" text="%nl.nlcode.m.engine.NoteGate" />
                        <MenuItem fx:id="noteHolder" mnemonicParsing="true" text="%nl.nlcode.m.engine.NoteHolder" />
                        <MenuItem onAction="#createProgramChanger" mnemonicParsing="true" text="%nl.nlcode.m.engine.ProgramChanger" />
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="keyboardKeyboard" mnemonicParsing="true" text="%nl.nlcode.m.engine.KeyboardKeyboard" />
                        <MenuItem fx:id="midiMessageDump" mnemonicParsing="true" text="%nl.nlcode.m.engine.MidiMessageDump" />
                        <MenuItem fx:id="lights" mnemonicParsing="true" text="%nl.nlcode.m.engine.Lights" />
                        <MenuItem onAction="#createA42" mnemonicParsing="true" text="%nl.nlcode.m.engine.A42" />
                    </items>
                </Menu>
                <Menu fx:id="windowMenu" mnemonicParsing="true" text="%_window">
                    <items>
                        <MenuItem mnemonicParsing="true" text="%allMidiInOutToFront" onAction="#allMidiInOutToFront"/>
                        <MenuItem mnemonicParsing="true" text="%minimizeAllMidiInOut" onAction="#minimizeAllMidiInOut"/>
                        <SeparatorMenuItem/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <right>
    </right>
    <center>
        <Label text="${controller.logo}" styleClass="logo"/>
    </center>
    <bottom>
    </bottom>
    <left>
    </left>
</fx:root>
